<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:clipToPadding="false"
    android:clipChildren="false">
    <TextView
        android:id="@+id/txtName"
        android:focusable="false"
        android:textStyle="bold"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/AddressHeading"
        android:layout_below="@id/txtName"
        android:focusable="false"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:text="Address"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtAddress"
        android:layout_below="@id/AddressHeading"
        android:focusable="false"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/PriceHeading"
        android:layout_below="@id/txtAddress"
        android:focusable="false"
        android:textStyle="bold"
        android:layout_width="wrap_content"
        android:text="Price"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtPrice"
        android:focusable="false"
        android:layout_below="@id/PriceHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/SpotsHeading"
        android:layout_below="@id/txtAddress"
        android:focusable="false"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/PriceHeading"
        android:paddingLeft="30dp"
        android:paddingRight="30dp"
        android:layout_width="wrap_content"
        android:text="Available Spots"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/txtSpotsAvailable"
        android:focusable="false"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/txtPrice"
        android:paddingLeft="50dp"
        android:paddingRight="30dp"
        android:layout_below="@id/PriceHeading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>